    android:layout_height="match_parent"
    tools:context="com.example.chiachen.camerapractice.MainActivity">

    <FrameLayout
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
